<Window x:Class="FileInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileInstaller"
        mc:Ignorable="d"
        Title="FileInstaller" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="732*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="FileSelectButtonFrom" Content="Select File or Folder." HorizontalAlignment="Left" Margin="423,143,0,0" VerticalAlignment="Top" Background="White" Click="FileSelectButtonFrom_Click" Grid.Column="2"/>
        <TextBlock x:Name="FilePath" HorizontalAlignment="Left" Margin="135,143,0,0" TextWrapping="Wrap" Text="FilePath" VerticalAlignment="Top" Height="20" Width="288" Grid.Column="2"/>
        <Label Grid.Column="2" Content="Application file" HorizontalAlignment="Left" Margin="254,81,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="RunButton" Grid.Column="2" Content="Run" HorizontalAlignment="Left" Margin="300,252,0,0" VerticalAlignment="Top" Background="White" FontSize="36" Click="RunButton_Click"/>

    </Grid>
</Window>
